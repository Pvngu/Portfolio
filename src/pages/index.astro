---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import H1 from '../components/H1.astro';
import AboutCard from '../components/AboutCard.astro';
import HeadingDescription from '../components/HeadingDescription.astro';
import ProjectCard from '../components/ProjectCard.astro';
import HeroBackground from '../components/HeroBackground.astro';
import ScrollingLogos from '../components/ScrollingLogos.astro';
import SectionContent from '../components/SectionContent.astro';
---

<Layout title="Pvngu | Portfolio">
	<main id="home">
		<div class="sticky h-auto top-0 overflow-hidden">
			<HeroBackground />
			<SectionContent className='h-svh'>
				<Hero />
			</SectionContent>
		</div>
		<div class="bg-black-light w-[97.5%] m-auto rounded-3xl 2xl:px-[73px] xl:px-[60px] md:px-[45px] px-[20px] 2xl:py-[70px] py-[40px] z-10 relative">
			<section id="about">
				<H1 className='text-white-gray'>About Me</H1>
				<AboutCard />
			</section>
			<section class="h-[600px]">
				<H1 className='text-white-gray'>My Toolbox</H1>
				<img height="400px" width="300px" src="/assets/cooking.gif" alt="">
				<p class="text-white-gray text-main font-semibold text-3xl">Hold on, I'm still cooking this section</p>
			</section>
		</div>
		<SectionContent id='projects' className='text-black-gray'>
			<HeadingDescription 
			title='Projects',
			description="Showcase of my “big projects” that I've been working on over the past 3 months using different technologies."
			/>
			<ScrollingLogos />
			<article class="my-8 flex gap-x-3 2xl:gap-x-5 gap-y-4 max-lg:flex-col">
				<ProjectCard
				title="MyStoreSystem",
				img='assets/mystoresystem.png'
				/>
				<ProjectCard
				title="Andrea's portfolio",
				img='assets/tres4tos.png'
				/>
			</article>
		</SectionContent>
	</main>
</Layout>
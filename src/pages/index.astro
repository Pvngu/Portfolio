---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import H1 from '../components/H1.astro';
import AboutCard from '../components/AboutCard.astro';
import Toolbox from '../components/Toolbox.astro';
import HeadingDescription from '../components/HeadingDescription.astro';
import Project from '../components/Project.astro';
import HeroBackground from '../components/HeroBackground.astro';
import ScrollingLogos from '../components/ScrollingLogos.astro';
import SectionContent from '../components/SectionContent.astro';
import Intro from '../components/Intro.astro';
---

<Layout title="Pvngu | Portfolio">
	<Intro />
	<main id="home">
		<div class="sticky h-auto top-0 overflow-hidden">
			<HeroBackground />
			<SectionContent className='h-svh'>
				<Hero />
			</SectionContent>
		</div>
		<div id="black-container" class="bg-black-light w-full m-auto rounded-3xl 2xl:px-[73px] xl:px-[60px] md:px-[45px] px-[20px] 2xl:py-[70px] py-[40px] z-10 relative overflow-hidden">
			<section id="about" class="max-w-[1720px] mx-auto md:mt-14">
				<H1 className='text-white-gray'>About Me</H1>
				<AboutCard />
			</section>
			<section class="relative 2xl:mt-24 mt-20 max-w-[1720px] mx-auto" id="toolbox">
				<img class=" max-lg:hidden absolute right-0 top-10" height="400px" width="300px" src="/assets/cooking.gif" alt="">
				<H1 className='text-white-gray'>My Toolbox</H1>
				<Toolbox />
			</section>
		</div>
		<SectionContent id='projects' className='text-black-gray'>
			<div class="max-w-[1720px] mx-auto my-6 md:my-14">
				<H1 className='pb-5'>Projects</H1>
				<ScrollingLogos />
				<Project />
			</div>
		</SectionContent>
	</main>
</Layout>
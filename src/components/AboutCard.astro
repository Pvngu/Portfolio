<script>
    import gsap from "gsap";
    import ScrollTrigger from "gsap/ScrollTrigger";

    gsap.registerPlugin(ScrollTrigger)

    gsap.from('.p', {
        scrollTrigger: {
            trigger: '.p',
            start: 'top 85%',
            end: 'top 50%',
            scrub: true,
            markers: false
        },
        opacity: 0.5
    })

    gsap.from('.p', {
        scrollTrigger: {
            trigger: '.p',
            scrub: true,
            markers: false
        },
        translateY: 70
    })

    gsap.from('.img', {
        scrollTrigger: {
            trigger: '.img',
            start: 'top 95%',
            end: 'top 20%',
            scrub: true,
            markers: false
        },
        ease: 'power4-out',
        scale: 0.90,
        opacity: .4
    },)
</script>
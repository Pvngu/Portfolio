---
interface Props {
    img?: string,
    title: string
}

const {
    img,
    title
} = Astro.props
---
<article class="flex flex-col w-full relative">
    <picture class="bg-red-500 rounded-3xl w-full overflow-hidden projectImg">
        <img class="color-fd object-cover size-full" src={img} alt=`image of ${title}`>
    </picture>
    <div>
        <div class="font-inter font-light text-2xl py-3">{title}</div>
    </div>
</article>

<style>
    picture {
        height: clamp(300px, 30vw, 600px);
    }
</style>

<script>
    import gsap from "gsap";
    import ScrollTrigger from "gsap/ScrollTrigger";

    gsap.registerPlugin(ScrollTrigger)

    const img = document.querySelectorAll('.projectImg')

    img.forEach(e => {
        gsap.from(e, {
        scrollTrigger: {
            trigger: e,
            start: 'top 95%',
            end: 'top 20%',
            scrub: true,
            markers: false
        },
        ease: 'power4-out',
        scale: 0.95
    },)
    })
</script>
---
import H2 from './H2.astro';

const lists = [
    {
        name: 'Frontend',
        tech: ['html5', 'css', 'javascript', 'tailwindcss', 'angular', 'astro']
    },
    {
        name: 'Backend',
        tech: ['php', 'mysql', 'laravel', 'sql-server']
    }
]
---
<div>
    {
        lists.map(list => (
            <div class="max-w-[700px] ml-[10%] rounded-3xl p-12">
                <H2 className='text-white-gray text-center'>{list.name}</H2>
                <div class="flex flex-wrap gap-y-20 mt-8 logosContainer">
                    {
                        list.tech.map(tech => (
                            <div class="size-[30%] overflow-hidden">
                                <img style="width:100%; height: 100%;" src=`/assets/logos/${tech}.svg` alt=`${tech} logo`>
                            </div>
                        ))
                    }
                </div>
            </div>
        ))
    }
</div>

<style>
    .logosContainer div{
        height: 10rem;
        display: flex;
        align-items: center;
    }
</style>